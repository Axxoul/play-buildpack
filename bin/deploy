#!/usr/bin/env bash

language='play'

dependencies=(
  'https://s3.amazonaws.com/heroku-jvm-langpack-play/play-heroku-1.3.1.tar.gz'
  'https://s3.amazonaws.com/heroku-jvm-langpack-play/play-heroku-1.2.7.tar.gz'
  'https://downloads.typesafe.com/play/1.3.4/play-1.3.4.zip'
  'https://downloads.typesafe.com/play/1.4.3/play-1.4.3.zip'
)

excluded_files=(
  '.git'
  '.gitignore'
  '.gitmodules'
  'cf_spec/'
  'log/'
  'test/'
  'bin/deploy'
  'buildpack-deployer/'
)

BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source $BIN/../buildpack-deployer/lib/deployer

deploy_buildpack $@
